{
  "expo": {
    "name": "Gentle Games",
    "slug": "gentle-games",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "#FFFEF7",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFEF7"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gentlegames.app",
      "buildNumber": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFEF7"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.gentlegames.app",
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "name": "Gentle Games",
      "shortName": "Gentle Games",
      "themeColor": "#FFFEF7",
      "backgroundColor": "#FFFEF7",
      "display": "standalone",
      "favicon": "./assets/pwa/icon-32x32.png",
      "icons": [
        {
          "src": "./assets/pwa/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        },
        {
          "src": "./assets/pwa/icon-512x512.png",
          "sizes": "512x512",
          "type": "image/png"
        },
        {
          "src": "./assets/pwa/icon-512x512-maskable.png",
          "sizes": "512x512",
          "type": "image/png",
          "purpose": "maskable"
        },
        {
          "src": "./assets/pwa/icon-180x180.png",
          "sizes": "180x180",
          "type": "image/png"
        }
      ]
    },
    "experiments": {
      "baseUrl": "/gentle-games"
    },
    "plugins": [
      "expo-audio"
    ]
  }
}
