{
  "name": "gentle-games",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web --output-dir dist --clear",
    "build:pwa": "npm run build:web && node scripts/prepare-pwa.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --runInBand --coverage --watchAll=false",
    "test:single": "jest --runInBand",
    "typecheck": "tsc --noEmit",
    "validate:android": "expo export --platform android --output-dir dist/android",
    "validate:ios": "expo export --platform ios --output-dir dist/ios"
  },
  "dependencies": {
    "@expo-google-fonts/nunito": "^0.4.2",
    "@expo/metro-runtime": "^6.1.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^7.1.28",
    "@react-navigation/stack": "^7.7.2",
    "expo": "~54.0.33",
    "expo-audio": "~1.1.1",
    "expo-font": "~14.0.11",
    "expo-sensors": "~15.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "react": "19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "0.81.5",
    "react-native-color-picker": "^0.6.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.2"
  },
  "devDependencies": {
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.1.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.12",
    "react-test-renderer": "^19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
